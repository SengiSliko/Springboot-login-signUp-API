# ============================================
# APPLICATION CONFIGURATION TEMPLATE
# ============================================
# Copy this file to application.properties and fill in your values
# DO NOT commit application.properties to Git (contains secrets)
# ============================================

# Application
spring.application.name=auth-api

# Server
server.port=8080

# PostgreSQL Database
# Replace with your pgAdmin connection details
spring.datasource.url=jdbc:postgresql://localhost:5432/authdb
spring.datasource.username=YOUR_POSTGRES_USERNAME
spring.datasource.password=YOUR_POSTGRES_PASSWORD
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA / Hibernate
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true

# Flyway
spring.flyway.enabled=true
spring.flyway.locations=classpath:db/migration

# JWT Configuration
# Generate a secret with: openssl rand -base64 32
jwt.secret=YOUR_BASE64_ENCODED_SECRET_HERE
jwt.expiration=86400000

# Swagger / OpenAPI
springdoc.api-docs.path=/v3/api-docs
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.enabled=true
springdoc.swagger-ui.operationsSorter=method
